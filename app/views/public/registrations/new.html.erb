<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規会員登録</h2>
    </div>
  </div>
<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%# puts "------------------" %>
<%## p resource_name %>

<%= form_with model: resource, url: registration_path(resource_name), method: :POST do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
　
　<div class="row">
　  <div class="col">
　    <div class="field">
　      <%= f.label :full_name, "名前" %> 
　    </div> 
　  </div>
　  <div class="col">
　    <div class="field">
　      <%= f.text_field :last_name, autocomplete: "last_name" %>
　    </div>
　  </div>
　  <div class="col">
　    <div class="field">
　      <%= f.text_field :first_name, autocomlete: "first_name" %>
 　    </div>
　  </div>
　</div>
　
　<div class="row">
　  <div class="col">
　    <div class="field">
　      <%= f.label :full_name_kana, "フリガナ" %>
　    </div>
　  </div>
　  <div class="col">
　    <div class="field">
　      <%= f.text_field :last_name_kana %>
　    </div>
　  </div>
　  <div class="col">
　    <div class="field">
　      <%= f.text_field :first_name_kana %>
　    </div>
　  </div>
　</div>
　
  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>
    
  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.text_field :postal_code %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="field">
        <%=f.label :address, "住所" %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.text_field :address %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="field">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
  </div>
  
　<div class="row">
　  <div class="col">
　    <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
　</div>
　
　<div class="row">
　  <div class="col">
　    <div class="field">
　      <%= f.label :password_confirmation %>
　    </div>
　  </div>
　  <div class="col">
　    <div class="field">
　      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
　    </div>
　  </div>
　</div>
 
 <div class="row">
   <div class="col">
     <div class="actions">
       <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
   </div>
 </div> 
<% end %>

</div>

<%= render "public/shared/links" %>
