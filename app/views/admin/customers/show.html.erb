<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= full_name %>さんの会員詳細
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <tbody>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.full_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th><%= @customer.is_active %></th>
          </tr>
          
        </tbody>
      </table>
    </div>
  </div>
    
  
</div>