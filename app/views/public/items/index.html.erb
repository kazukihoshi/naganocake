<div class="container">
  <div class="row">
    <div class="col-2 mt-5 border">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-10 mt-5 ">
      <div class="row">
        <h4>商品一覧(全x件)</h4>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col">
            <table>
              <tr>
                <th>
                  <%= link_to item_path(item.id) do %>
                    <% if item.image.attached? %>
                      <%= image_tag item.image, size: "180x130" %>
                    <% else %>
                      <%= image_tag 'no_image.jpeg', size: "180x130" %>
                    <% end %>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th>
                  <%= item.name %>
                </th>
              </tr>
              <tr>
                <th>
                  <%= item.price.to_s(:delimited) %>円
                </th>
              </tr>
            </table>
          </div>
        <% end %>
    </div>
    
  </div>
</div>