<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col">
      <h4>商品一覧(全x件)</h4>
    </div>
    <div class="col">
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image, size: "100x100" %>
        <% end %>
        <%= item.name %>
        <%= item.price.to_s(:delimited) %>円
      <% end %>
    </div>
    
  </div>
</div>