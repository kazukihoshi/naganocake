<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h4>注文情報入力</h4>
    </div>
  </div>
  
  <%= form_with model: @order, url: orders_confirm_path, local: true, method: :POST do |f| %>
    <div class="row">
      <div class="col">
        <h5>支払方法</h5>
        <div class="form-group pl-4">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method,Order.payment_methods_i18n[:credit_card] %><br>
          
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <h5>お届け先</h5>
        <div class="form-group pl-4">
          <%= f.radio_button :select_address, 0 %>
          <%= f.label :address, "ご自身の住所" %>
          <%#= @order.customer.address%>
        </div>
        <div class="form-group pl-4">
          <%= f.radio_button :select_address, 1 %>
          <%= f.label :address, "登録済み住所から選択" %>
          <div class="col-5">
            <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
          </div>
          
        </div>
        <div class="form-group pl-4">
          <%= f.radio_button :select_address, 2 %>
          <%= f.label :address, "新しいお届け先" %>
          <div class="row">
            <div class="col-3 pl-4">
              <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
            </div>
            <div class="col-5 mb-2">
               <%= f.text_field :postal_code, placeholder: "0000000" %>
            </div>
          </div>
          <div class="row">
            <div class="col-3 pl-4">
              <%= f.label :address, "住所" %>
            </div>
            <div class="col-5 mb-2">
               <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0"%>
            </div>
          </div>
          <div class="row">
            <div class="col-3 pl-4">
               <%= f.label :name, "宛名" %>
            </div>
            <div class="col-5 mb-2">
               <%= f.text_field :name, placeholder: "令和道子" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col">
        <div class="form-group text-center">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    
    
  <% end %>
</div>