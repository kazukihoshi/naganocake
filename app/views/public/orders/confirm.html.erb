<div class="container">
  <div class="row">
    <div class="col">
      <h4>注文情報確認</h4>
    </div>  
  </div>
  
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>
              商品名 
            </th>
            <th>
              単価(税込)
            </th>
            <th>
              数量
            </th>
            <th>
              小計
            </th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <% @total_price = @total_price += cart_item.subtotal %>
        <tbody>
          <tr>
            <td>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.add_tax_price.to_s(:delimited) %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    
    <div class="col">
      <table>
        
          <tr>
            <th>
              送料
              <% @order.postage = 800 %>
            </th>
            <td>
              <%= @order.postage %>
            </td>
          </tr>
          <tr>
            <th>
              商品合計
            </th>
            <td>
              <%= @total_price %>
            </td>
          </tr>
          <tr>
            <th>
              請求金額
            </th>
            <td>
              <%= @order.postage + @total_price %>
            </td>
          </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h6>支払方法</h6>
    </div>
    <div class="col">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h6>お届け先</h6>
    </div>
    <div class="col">
      <%= @address.address_display %>
    </div>
  </div>
  
  <div claaa="row">
    <div class="col">
      <%= link_to "注文を確定する", orders_complete_path, class: "btn btn-success" %>
    </div>
  </div>
</div>