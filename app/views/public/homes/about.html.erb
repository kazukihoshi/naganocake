<h1>Public::Homes#about</h1>
<p>Find me in app/views/public/homes/about.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  
  <form class="row form-inline">
   
    <%= form_with model: @genre, url: '/admin/genres' do |f| %>
    
      <div class="form-group mr-5">
        <%= f.label :"ジャンル名" %>
      </div>
      
      <div class="form-group mr-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
  
      <div class="form-group mr-5">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>
  </form>
    
  <div clss="row">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
 
    </div>
  </div>
  
   
  
</div>