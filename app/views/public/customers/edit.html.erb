<div class="container">
  <div class="row">
    <div class="col">
      <h4>会員情報編集</h4>
    </div>
  </div>
  
  <%= form_with model: @customer, url: customers_information_path, local: true, method: :PATCH do |f| %>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :name, "氏名" %>
      </div>
    </div>
    
    <div class="col">
      <div class="form-group">
        <%= f.text_field :last_name, class: "form_control" %>
      </div>
    </div>
    
    <div class="col">
      <div class="form-group">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :name_kana, "カナ" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :postal_code, "郵便番号" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :address, "住所" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :telephone_number, "電話番号" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
  </div>
  
  
  
  <div class="row">
    <div class="col">
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
    </div>
    <div class="col">
        <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
    </div>
  </div>
  
  <% end %>
  
  
  
</div>