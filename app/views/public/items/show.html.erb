<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
         <% @genres.each do |genre| %>
         <tr>
           <td>
             <%= genre.name %>
           </td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>  
    
    <div class="col">
      <%= image_tag @item.image, size: "100x100" %>
    </div>
    
    <div class="col">
     <table>
       <tbody>
         <tr>
           <th>
             <%= @item.name %>
           </th>
         </tr>
         <tr>
           <th>
             <%= @item.introduction %>
           </th>
         </tr>
         <tr>
           <th>
             <%= @item.price.to_s(:delimited) %>円
           </th>
         </tr>
         <tr>
           <th></th>
         </tr>
       </tbody>
     </table>
    </div>
  </div>
</div>
