<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= l order.created_at %></td>
              <td><%= order.postal_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                <% end %>
              </td>
              <td><%= order.billing_amount.to_s(:delimited) %></td>
              <td><%= order.is_active %></td>
              <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>