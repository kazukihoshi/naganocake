<div class="container">
  <div class="row">
   <div class="col-md-9 ">
    <h4>ジャンル一覧・追加</h4>
    <%= form_with model: @genre, url: '/admin/genres' do |f| %>
    
       <div class="form-group">
        <%= f.label :"ジャンル名" %>
        <%= f.text_field :name, class: "form-control" %>
     
     　</div>
      
     
        <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
     
      
    <% end %>
    
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
</div>