<div class="container">
  <div class="row">
    <div class="col">
      注文履歴詳細
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.to_s(:datetime_jp) %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.is_active %></td>
        </tr>
      </table>
    </div>
    
    <div class="col">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @total_price %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td>
            <% @order.postage = 800 %>
            <%= @order.postage %>
          </td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.billing_amount %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= cart_item.item.name %>
              </td>
              <td>
                <%= cart_item.item.add_tax_price.to_s(:delimited) %>
              </td>
              <td>
                <%= cart_item.amount %>
              </td>
              <td>
                <%= cart_item.subtotal %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>