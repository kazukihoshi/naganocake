<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <h4>商品詳細</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "200x200"  %>
        <% else %>
          <%= image_tag 'no_image.jpeg', size: "200x200" %>
        <% end %>
    </div>
    
    <div class="col-md-8">
      <table class="table">
        <tbody>
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre.name %></th>
          </tr>
          <tr>
            <th>税込価格</br>
            (税抜価格)</th>
            <th><%= @item.add_tax_price.to_s(:delimited) %>
            (<%= @item.price.to_s(:delimited) %>)円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <% if @item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
          <tr>
            <th>
              <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
            </th>
          </tr>
          
        </tbody>
      </table>
    </div>
  
  </div>
</div>

