<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  
    
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= l order.created_at %>
                <% end %>
              </td>
              <td>
                <%= order.customer.last_name + order.customer.first_name %>
              </td>
              <td>
                <%# @total_quantity = order.order_details.quantity %>
                <%# order.order_details.each do |order_detail| %>
                  <%## byebug %>
                <%# end %>
                <%#= @total_quantity %>
                <%= order.order_details.sum(:quantity) %>
              </td>
              <td>
                <%= order.is_active_i18n %>
              </td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
      <%#= paginate @orders %>
      
    </div>
  </div>
  
  
</div>