<div class="container">
  <div class="row">
    <div class="col-3 my-3">
      <h4>商品一覧</h4>
    </div>
    <div class="col-2 offset-6 my-3">
      <%= link_to new_admin_item_path, class: 'text-light' do %>
        <i class="fas fa-plus-circle fa-3x"></i>
        <!--<i class="fa-light fa-circle-plus"></i>-->
        <!--<i class="fa-thin fa-circle-plus"></i>-->
      <% end %>
    </div>
  </div>
  
    
  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td>
            <%= item.price %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
            <%= item.is_active %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
   
  
</div>
