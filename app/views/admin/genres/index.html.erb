<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-7">
      
   
        <%= form_with model: @genre, url: admin_genres_path, local: true, method: :POST do |f| %>
    
          <div class="form-group mr-5 mt-5">
            <%= f.label :"ジャンル名" %>
          </div>
      
          <div class="form-group mr-5 mt-5">
           <%= f.text_field :name, class: "form-control" %>
          </div>
  
          <div class="form-group mr-5 mt-5">
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        <% end %>
      
    </div>
  </div>
  
  
    
  <div clss="row">
    <div class="col-4 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
 
    </div>
  </div>
  
   
  
</div>