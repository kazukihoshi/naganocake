<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
         <% @genres.each do |genre| %>
         <tr>
           <td>
             <%= genre.name %>
           </td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>  
    
    <div class="col">
      <%= image_tag @item.image, size: "100x100" %>
    </div>
    
    <div class="col">
     <table>
       <tbody>
         <tr>
           <th>
             <%= @item.name %>
           </th>
         </tr>
         <tr>
           <th>
             <%= @item.introduction %>
           </th>
         </tr>
         <tr>
           <th>
             <%= @item.price.to_s(:delimited) %>円
           </th>
         </tr>
       </tbody>
     </table>
     <%= form_with url: cart_items_path, model: @cart_item, local: true, method: :POST do |f| %>
       <%= f.hidden_field :item_id, :value => @item.id %>
       <%= f.select :amount,*[1..10] %>
       <%= f.submit "カートに入れる", class: "btn btn-success" %>
     <% end %>
    </div>
  </div>
</div>
