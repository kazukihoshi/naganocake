<div class="container">
  <div class="row">
    <div class="col">
      <h4>配送先編集</h4>
    </div>
  </div>
  
  <%= form_with model: @address, url: address_path, local: true, method: :patch do |f| %>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </div>
      </div>
    
      <div class="col">
        <div class="form-group">
          <%= f.text_field :postal_code, class: "form-contol" %>
        </div>
      </div>
    </div>
  
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :address, "住所" %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= f.text_field :address, class: "form-contorl" %>
        </div>
      </div>
    </div>
  
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= f.label :name, "宛先" %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= f.text_field :name, class: "form-group" %>
        </div>
      </div>
      <div class="col">
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  
</div>