<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>注文履歴一覧</h4>
    </div>
  </div>
  
    
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.created_at %>
              </td>
              <td>
                <%= customer.full_name %>
              </td>
              <td>
                <%= customer.quantity %>
              </td>
              <td>
                <%= customer.is_active %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
   
    </div>
  </div>
  
  
</div>