<div class="container">
  <div class="row">
    <div class="col-4 mt-4 mb-4 text-center bg-secondary">
      <h2>ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mt4 mb-4 text-center bg-secondary">
      <h4>会員の方はこちらからログイン</h4>
    </div> 
  </div>



<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= form_with model: resource, url: session_path(resource_name), method: :POST do |f| %>

  <div class="row mb-3">
    <div class="col text-right">
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col text-right">
      <div class="field">
        <%= f.label :password, "パスワード" %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col text-center">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  
<% end %>
  
