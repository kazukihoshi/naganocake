<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image, size: "200x200"  %>
    </div>
    <div class="col-md-8">
      <table class="table">
        <tbody>
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre_id %></th>
          </tr>
          <tr>
            <th>税込価格(税抜価格)</th>
            <th><%= @item.price %></th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th><%= @item.is_active %></th>
          </tr>
          
          
        </tbody>
      </table>
    </div>
  </div>
</div>

