<div class="container">
  <div class="row">
    <div class="col my-4">
      <h4>会員情報編集</h4>
    </div>
  </div>
  
  <%= form_with model: @customer, url: customers_information_path, local: true, method: :PATCH do |f| %>
  <div class="form-group row my-3">
    <%= f.label :name, "氏名", class: "col-sm-2" %>
    <div class="col-sm-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row my-3">
    <%= f.label :name_kana, "カナ", class: "col-sm-2" %>
    <div class="col-sm-3">
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row my-3">
    <%= f.label :postal_code, "郵便番号", class: "col-sm-2" %>
    <div class="col-sm-3">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row my-3">
    <%= f.label :address, "住所",class: "col-sm-2" %>
    <div class="col-sm-3">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row my-3">
    <%= f.label :telephone_number, "電話番号", class: "col-sm-2" %>
    <div class="col">
      <%= f.text_field :telephone_number, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row my-3">
    <%= f.label :email, "メールアドレス", class: "col-sm-2" %>
    <div class="col">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  
  
  
  <div class="form-group row my-3">
    <div class="col-sm-3 offset-2">
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
    </div>
    <div class="col-sm-3">
        <%= link_to '退会する',customers_unsubscribe_path, class: "btn btn-danger" %>
    </div>
  </div>
  
  <% end %>
  
  
  
</div>