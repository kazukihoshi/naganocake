<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>商品編集</h4>
    </div>
  </div>
  
 
  <form>
    
    <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
    
      <div class="form-group row my-3">
        <%= f.label :"商品画像",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
           <%= f.file_field :image,accept: "image/*",class: "form-control-file image" %>
        </div>
      </div>
      
      <div class="form-group row my-3">
        <%= f.label :"商品名",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row mr-5">
        <%= f.label :"商品説明",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row mr-5">
        <%= f.label :"ジャンル",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.select :genre_id,[[]] %>
        </div>
      </div>
      
      <div class="form-group row mr-5">
        <%= f.label :"税抜価格",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :price, class: "form-control" %>円
        </div>
      </div>
      
      <div class="form-group row mr-5">
        <%= f.label :"販売ステータス",class: "col-sm-2 col-form-label" %>
        <%= f.radio_button :is_active, "販売中"  %>
        <%= f.label :is_actice, "販売中", value: "販売中",class: "col-sm-2 col-form-label" %>
        <%= f.radio_button :is_active, "販売停止中" %>
        <%= f.label :is_active, "販売停止中", value: "販売停止中",class: "col-sm-2 col-form-label" %>
      </div>
      
      <div class="form-group row justify-content-center">
        <div class="col-sm-2">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      </div>
     
    <% end %>
  
  </form>
</div>
