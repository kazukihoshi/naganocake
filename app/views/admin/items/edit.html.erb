<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <h4>商品編集</h4>
    </div>
  </div>
  
 

    
  <%= form_with model: @item, url: admin_item_path(@item.id), local: true, method: :PATCH do |f| %>
    <div class="row">
      <div class="col-2 offset-2 text-left">
        <div class="form-group">
          <%= f.label :image, "商品画像" %>
        </div>
      </div>
      <div class="col ml-5">
        <div class="form-gourp">
          <%= f.file_field :image,accept: "image/*",class: "form-control-file image" %>
        </div>
      </div>
    </div>
      
    <div class="row">
      <div class="col-2 offset-2 text-left">
        <div class="form-group">
          <%= f.label :name, "商品名" %>
        </div>
      </div>
      <div class="col ml-5">
        <div class="form-group">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    </div>
     
    <div class="row">
      <div class="col-2 offset-2 text-left">
        <div class="form-group">
          <%= f.label :introduction, "商品説明"%>
        </div>
      </div>
      <div class="col ml-5">
        <div class="form-group">
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      </div>
    </div>
      
    <div class="row">
      <div class="col-2 offset-2 text-left">
        <div class="form-group">
          <%= f.label :genre, "ジャンル"%>
        </div>
      </div>
      <div class="col ml-5">
        <div class="form-group">
          <%= f.collection_select :genre_id, @genre, :id, :name, :include_blank => "選択してください" %>
        </div>
      </div>
    </div>
      
    <div class="row">
      <div class="col-2 offset-2 text-left">
        <div class="form-group">
          <%= f.label :proce, "税抜価格"%>
        </div>
      </div>
      <div class="col ml-5">
        <div class="form-group">
          <%= f.text_field :price, class: "form-control" %>円
        </div>
      </div>
    </div>
      
    <div class="row">
      <div class="col-2 offset-2 text-left">
        <div class="form-group">
          <%= f.label :is_active, "販売ステータス"%>
        </div>
      </div>
      <div class="col ml-5">
        <div class="form-group">
          <%= f.radio_button :is_active, "販売中"  %>
          <%= f.label :is_actice, "販売中", value: "販売中",class: "col-form-label" %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= f.radio_button :is_active, "販売停止中" %>
          <%= f.label :is_active, "販売停止中", value: "販売停止中",class: "col-form-label" %>
        </div>
      </div>
    </div>
      
    <div class="row text-center">
      <div class="col">
        <div class="form-gruop row justify-content-center">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      </div>
    </div>
    
          
     
  <% end %>
  
 
</div>
