<div class="container">
  <div class="row">
    <div class="col my-4">
      <h4>配送先編集</h4>
    </div>
  </div>
  
  <%= form_with model: @address, url: address_path, local: true, method: :patch do |f| %>
    <div class="row">
      <div class="col-sm-3">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-sm-3 mb-2">
        <%= f.text_field :postal_code, class: "form-contol" %>
      </div>
    </div>
  
    <div class="row">
      <div class="col-sm-3">
        <%= f.label :address, "住所" %>
      </div>
      <div class="col-sm-3 mb-2">
        <%= f.text_field :address, class: "form-contorl" %>
      </div>
    </div>
  
    <div class="row">
      <div class="col-sm-3">
        <%= f.label :name, "宛先" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :name, class: "form-group" %>
      </div>
      <div class="col-sm-3">
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  
</div>