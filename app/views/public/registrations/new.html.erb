<div class="container">
  <div class="row">
    <div class="col-2 offset-2 mt-4 bg-light">
      <h4>新規会員登録</h4>
    </div>
  </div>
<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%# puts "------------------" %>
<%## p resource_name %>

<%= form_with model: resource, url: registration_path(resource_name), method: :POST do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
　
　<div class="form-group row">
　  <%= f.label :full_name, "名前",class: "col-2" %> 
　  <div class="col-3">
　    <span>(姓)</span><%= f.text_field :last_name, autocomplete: "last_name"%>
　  </div>
　  <div class="col-3">
　    <span>(名)</span><%= f.text_field :first_name, autocomlete: "first_name" %>
 　  </div>
　</div>
　
　<div class="form-group row">
    <%= f.label :full_name_kana, "フリガナ",class: "col-2"%>
    <div class="col-3 ">
　   <span>(セイ)</span><%= f.text_field :last_name_kana %>
　  </div>
　  <div class="col-3">
　    <span>(メイ)</span><%= f.text_field :first_name_kana%>
　  </div>
　</div>
　
  <div class="form-group row">
    <%= f.label :email, "メールアドレス",class: "col-3" %>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
    </div>
  </div>
    
  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)",class: "col-3"  %>
    <div class="col-3">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  
  <div class="form-group row">
    <%=f.label :address, "住所",class: "col-3" %>
    <div class="col-3">
      <%= f.text_field :address %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)",class: "col-3"  %>
    <div class="col-3">
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  
　<div class="form-group row">
    <%= f.label :password, "パスワード(6文字以上)", class: "col-3"%>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %>
    <div class="col-4">
      <%= f.password_field :password, autocomplete: "new-password"%>
    </div>
　</div>
　
　<div class="form-group row">
　  <%= f.label :password_confirmation, "パスワード(確認用)"%>
　  <div class="col-4 offset-1">
　      <%= f.password_field :password_confirmation, autocomplete: "new-password"%>
　  </div>
　</div>
　
  <div class="form-group row">
   <div class="col-5 offset-3">
     <div class="actions">
       <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
   </div>
  </div> 
<% end %>

  <div class="row">
    <div class="col-4 mt-4 bg-light">
      <h4>既に登録済みの方</h4>
    </div>
  </div>
  <div class="row">
    <div class="col text-right">
     <p><%= render "public/shared/links" %></p>
    </div>
    <div class="col">
     <p>からログインしてください</p>
    </div>
  </div>
    

</div>


