<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  
  
   
  <%= form_with model: @genre, url: admin_genres_path, local: true, method: :POST do |f| %>
    <div class="row">
      <div class="col-2">
        <div class="form-group mr-5 mt-5">
          <%= f.label :genre, "ジャンル名" %>
        </div>
      </div>
      <div class="col-2">
        <div class="form-group mr-5 mt-5">
            <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
        </div>
      </div>
      <div class="col-2">
        <div class="form-group mr-5 mt-5">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      </div>
      <div class="col-6">
      </div>
    </div>
  <% end %>
      

 
  
  <div clss="row">
    <div class="col-4 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td class="text-right">
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
 
    </div>
  </div>
  
   
  
</div>