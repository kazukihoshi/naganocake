<div class="container">
  <div class="row">
    <div class="col">
      <h4>マイページ</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h4>登録情報</h4>
    </div>
    <div class="col">
      <%= link_to "編集する", customers_information_edit_path(@customer.id), class: "btn btn-success" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table">
        <% @customers.each do |customer| %>
        <thead>
          <tr>
            <th>名前</th>
            <th><%= customer.full_name %></th>
          </tr>
          <tr>
            <th>カナ</th>
            <th><%= customer.full_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= customer.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= customer.email %></th>
          </tr>
        </thead>
        <% end %>
      </table>
    </div>
    
    <div class="row">
      <div class="col">
        <h4>配送先</h4>
      </div>
      <div class="col">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col">
        <h4>注文履歴</h4>
      </div>
      <div class="col">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>
    </div>

    
  </div>
  
  
  
  
  
</div>