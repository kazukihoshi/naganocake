<div class="container">
  <div class="row">
    <div class="col-3 my-5 ">
      <h4>ジャンル編集</h4>
    </div>
  </div>
  
     
    
  <%= form_with model: @genre, url: admin_genre_path, local: true, method: :PATCH do |f| %>
    <div class="row">
      <div class="col-2">
        <div class="form-group mr-5"> 
         <%= f.label :genre, "ジャンル名" %>
        </div>
      </div>
    
      <div class="col-2">
        <div class="form-group mr-5">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    
      <div class="col-2">
        <div class="form-group mr-5">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      </div>
      <div class="col-6">
        
      </div>
    </div>  
    
     
  <% end %>
  
</div>
 