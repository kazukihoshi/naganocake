<div class="container">
  <h4>商品新規登録</h4>
 
  <form class="form-inline">
    
    <%= form_with model: @item, url: '/admin/items/new' do |f| %>
    
      <div class="form-group mr-5">
        <%= f.label :"商品画像" %>
      </div>
      
      <div class="form-group mr-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
     
    <% end %>
  
  </form>
</div>