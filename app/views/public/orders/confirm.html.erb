<div class="container">
  <div class="row">
    <div class="col">
      <h4>注文情報確認</h4>
    </div>  
  </div>
  
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>
              商品名 
            </th>
            <th>
              単価(税込)
            </th>
            <th>
              数量
            </th>
            <th>
              小計
            </th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <% @total_price = @total_price += cart_item.subtotal %>
        <tbody>
          <tr>
            <td>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.add_tax_price.to_s(:delimited) %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    
    <div class="col">
      <table>
        
          <tr>
            <th>
              送料
              <% @order.postage = 800 %>
            </th>
            <td>
              <%= @order.postage %>
            </td>
          </tr>
          <tr>
            <th>
              商品合計
            </th>
            <td>
              <%= @total_price %>
            </td>
          </tr>
          <tr>
            <th>
              請求金額
            </th>
            <td>
              <%= @order.postage + @total_price %>
            </td>
          </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h6>支払方法</h6>
    </div>
    <div class="col">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <h6>お届け先</h6>
    </div>
    <div class="col">
      <%= @address.address_display %>
    </div>
  </div>
  
  <div claaa="row">
    <div class="col">
      <%= form_with model: @order, url: orders_path, local: true, method: :POST do |f| %>
        <%= f.hidden_field :order_id, :value => @order.id %>
        <%= f.hidden_field :item_id, :value => @item_id %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :billing_amount, :value => @order.postage + @total_price %>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>