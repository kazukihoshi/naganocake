<div class="container">
  <div class="row">
    <div class="col-3 mt-5">
      <h4>商品新規登録</h4>
    </div>
  </div>
  

      
    
      <%= form_with model: @item, url: admin_items_path, local: true, method: :POST do |f| %>
        <div class="row">
          <div class="col-2 offset-2 text-left">
            <div class="form-group">
              <%= f.label :image, "商品画像" %>
            </div>
          </div>
          
          <div class="col ml-5">
            <div class="form-group">
            <%= f.file_field :image,accept: "image/*",class: "form-control-file image" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-2 offset-2 text-left">
            <div class="form-group">
              <%= f.label :name, "商品名" %>
            </div>
          </div>
          <div class="col ml-5">
            <div class="form-group">
              <%= f.text_field :name,placeholder: "商品名", class: "form-control col-6" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-2 offset-2 text-left">
            <div class="form-group">
              <%= f.label :introduction, "商品説明" %>
            </div>
          </div>
          <div class="col ml-5">
            <div class="form-group">
              <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control col-6" %>
            </div>
          </div>
        </div>  
        
        <div class="row">
          <div class="col-2 offset-2 text-left">
            <div class="form-group">
              <%= f.label :genre, "ジャンル名" %>
            </div>
          </div>
          <div class="col ml-5">
            <div class="form-group">
              <%= f.collection_select :genre_id, @genre, :id, :name, :include_blank => "選択してください" %>
            </div>
          </div>
        </div>
      
        <div class="row">
          <div class="col-2 offset-2 text-left">
            <div class="form-group">
              <%= f.label :price, "税抜価格" %>
            </div>
          </div>
          <div class="col ml-5 flex-row">
            <div class="form-group">
              <%= f.text_field :price, placeholder: "1000", class: "form-control col-6" %><span>円</span>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-2 offset-2 text-left">
            <div class="form-group">
              <%= f.label :is_active, "販売ステータス"%>
            </div>
          </div>
          <div class="col ml-5">
            <div class="form-group">
              <%= f.radio_button :is_active, "販売中"  %>
              <%= f.label :is_actice, "販売中", value: "販売中" %>
              <%= f.radio_button :is_active, "販売停止中" %>
              <%= f.label :is_active, "販売停止中", value: "販売停止中" %>
            </div>
          </div>
        </div>
        
        <div class= "row text-center">
          <dic class="col">
            <div class="form-group">
              <%= f.submit '新規登録', class: "btn btn-success" %>
            </div>
          </div>
        </div>
         
     
      <% end %>
  
      

  
</div>
