<div class="container">
  <h4>ジャンル編集</h4>
 
  <form class="form-inline">
    
    <%= form_with model: @genre, url: '/admin/genres' do |f| %>
    
      <div class="form-group mr-5">
        <%= f.label :"ジャンル名" %>
      </div>
      
      <div class="form-group mr-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
     
    <% end %>
  
  </form>
</div>