<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h4>マイページ</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2">
      <h4>登録情報</h4>
    </div>
    <div class="col-3">
      <%= link_to "編集する", customers_information_edit_path(@customer.id), class: "btn btn-success" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col mt-4">
      <table class="table table-bordered">
        <%# @customers.each do |customer| %>
        <thead class="thead-light">
          <tr>
            <th>名前</th>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </thead>
        <%# end %>
      </table>
    </div>
  </div>
    
  <div class="row">
    <div class="col-2">
      <h4>配送先</h4>
    </div>
    <div class="col-3">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
    </div>
  </div>
    
  <div class="row">
    <div class="col-2 mt-3">
      <h4>注文履歴</h4>
    </div>
    <div class="col-3 mt-3">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>